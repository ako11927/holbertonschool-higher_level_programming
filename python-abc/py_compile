#!/usr/bin/env python3
"""Test duck typing"""
from task_01_duck_typing import shape_info

# Create a class that's NOT a Shape subclass but has the right methods
class MyShape:
    def __init__(self):
        pass
    
    def area(self):
        return 42
    
    def perimeter(self):
        return 100

# Create another duck-typed object
class Triangle:
    def __init__(self, base, height, side1, side2, side3):
        self.base = base
        self.height = height
        self.side1 = side1
        self.side2 = side2
        self.side3 = side3
    
    def area(self):
        return 0.5 * self.base * self.height
    
    def perimeter(self):
        return self.side1 + self.side2 + self.side3

print("Testing duck typing:")
print("=" * 50)

# Test with MyShape (not a Shape subclass)
my_shape = MyShape()
shape_info(my_shape)

print()

# Test with Triangle (not a Shape subclass)
triangle = Triangle(3, 4, 3, 4, 5)
shape_info(triangle)

print()

# Test that we CANNOT instantiate Shape
try:
    from task_01_duck_typing import Shape
    s = Shape()
    print("ERROR: Should not be able to instantiate Shape")
except TypeError as e:
    print("Good! Cannot instantiate abstract Shape class")
    print("Error:", e)
